<%= form_for(@project) do |f| %>
  <p>
    <%= f.label :name %><br/>
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :description %><br/>
    <%= f.text_area :description, cols: 40, rows: 7 %>
  </p>
  <p>
    <%= f.label :target_pledge_amount %><br/>
    <%= f.text_field :target_pledge_amount, size: 10 %>
  </p>
  <p>
    <%= f.label :website %><br/>
    
  </p>
  <p>
    <%= f.label :pledging_ends_on %><br/>
    <%= f.number_field :pledging_ends_on %>
  </p>
  <p>
    <%= f.submit %>
  </p>
<% end %>